apiVersion: apps/v1
kind: Deployment
metadata:
  name: controller-manager
  namespace: system
spec:
  template:
    spec:
      containers:
      # Change the value of image field below to your controller image URL
      - image: registry.gitlab.com/pongsatt/githook/controller:latest
        name: manager
        env:
          - name: WEBHOOK_IMG
            value: registry.gitlab.com/pongsatt/githook/webhook:latest
